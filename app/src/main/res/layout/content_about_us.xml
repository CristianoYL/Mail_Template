<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/darker_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cristiano.mailtemplate.MainActivity"
    tools:showIn="@layout/app_bar_about_us">


    <ImageView
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/photo_1"
        android:id="@+id/iv1">

    </ImageView>

    <ImageView
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:background="@drawable/photo_2"
        android:id="@+id/iv_2"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Li Yin"
        android:id="@+id/tv_name1"
        android:textSize="20sp"
        android:layout_alignTop="@+id/iv1"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel:(732)789-7696"
        android:id="@+id/tv_tel1"
        android:layout_below="@+id/tv_name1"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_name1"
        android:layout_alignStart="@+id/tv_name1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail: li.yin.cristiano@rutgers.edu"
        android:id="@+id/tv_mail1"
        android:layout_below="@+id/tv_tel1"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_name1"
        android:layout_alignStart="@+id/tv_name1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Cong Wang"
        android:id="@+id/tv_name2"
        android:textSize="20sp"
        android:layout_alignTop="@+id/iv_2"
        android:layout_alignLeft="@+id/btn_yl"
        android:layout_alignStart="@+id/btn_yl" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel:(732)322-0825"
        android:id="@+id/tv_tel2"
        android:layout_below="@+id/tv_name2"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_name2"
        android:layout_alignStart="@+id/tv_name2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="e-mail: cw700@scarletmail.rutgers.edu"
        android:id="@+id/tv_mail2"
        android:layout_below="@+id/tv_tel2"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_tel2"
        android:layout_alignStart="@+id/tv_tel2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View My Facebook"
        android:id="@+id/btn_yl"
        android:layout_below="@+id/tv_mail1"
        android:layout_alignLeft="@+id/tv_mail1"
        android:layout_alignStart="@+id/tv_mail1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View My Facebook"
        android:id="@+id/btn_wc"
        android:layout_below="@+id/tv_mail2"
        android:layout_alignLeft="@+id/tv_mail2"
        android:layout_alignStart="@+id/tv_mail2" />

</RelativeLayout>
